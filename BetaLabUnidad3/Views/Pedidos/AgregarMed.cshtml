@model IEnumerable<BetaLabUnidad3.Models.Med>

@{
    ViewBag.Title = "AgregarMed";
}

<h2>Agregar Medicamentos</h2>

<p>
    @Html.ActionLink("Lista Pedidos", "Index", "Pedidos")
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.casa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.existencia)
        </th>
        <th>
            <p>Cantidad a comprar (Agregue cantidad de cada farmaco)</p>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.casa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.existencia)
            </td>
            <td>
                @Html.ActionLink("Confirmar", "AgregarMed", new { ClientName = item.Nombre })
            </td>
        </tr>
    }

</table>
